<%-include ("../Include/admin_head.ejs")%>
    <%-include ("../Include/admin_header.ejs")%>
    <div class="app-wrapper">

        <div class="app-content pt-3 p-md-3 p-lg-4">
            
            <div class="container-xl">
            
                <h1 class="app-page-title">Add Faculty Account</h1>
                <hr class="mb-4">
                <div class="row g-4 settings-section">
                    <div class="col-12 col-md-4">
                        <h3 class="section-title">Account</h3>
                        <div class="section-intro">Fillout Information</div>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="app-card app-card-settings shadow-sm p-4">

                            <div class="app-card-body">
                                <form method="POST" class="settings-form needs-validation" novalidate>
                                
                                    <div class="mb-2">
                                        <label for="firstname" class="form-label">First Name</label>
                                        <input type="text" class="form-control" id="firstname" name="firstname"
                                        minlength="2" required>
                                    </div>
                                    <div class="mb-2">
                                        <label for="lastname" class="form-label">Last Name</label>
                                        <input type="text" class="form-control" id="lastname" name="lastname" minlength="2" required
                                            >
                                    </div>
                                    <div class="mb-2">
                                        <label for="phonenumber" class="form-label">Phonenumber</label>
                                        <input type="text" class="form-control" id="phonenumber" name="phonenumber"  minlength="11" maxlength="11" 
                                            required>
                                    </div>
                                    <div class="mb-2">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email"
                                            required>
                                    </div>
                                 
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                            <input type="password" class="form-control" id="password" name="password"
                                                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                                            <div >
                                                Must contain at least one number and one uppercase and lowercase
                                                letter,
                                                and at
                                                least 8 or more characters
                                            </div>
                                    </div>
                                    <button type="submit" class="btn btn-success text-white">Add Faculty</button>
                                </form>
                            </div>
                            <!--//app-card-body-->

                        </div>
                        <!--//app-card-->
                    </div>
                </div>
                <!--//row-->

            </div>
            <!--//container-fluid-->
        </div>
        <!--//app-content-->


    </div>
      

        <!--//app-content-->
        <%-include ("../Include/admin_end.ejs")%>