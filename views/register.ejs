<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Registration Form</title>
</head>

<body>
    <div class="app">
        <section class="pt-4 pb-4">
            <div class="container-lg">
                <div class="row justify-content-center align-items-center">
                    <div class="col-lg-5 col-md-6 col-sm-7">
                        <div class="card shadow">
                            <div class="card-body">
                                <h3 class="card-title mb-3 mt-2 fw-bold">Student Registration Form</h3>
                                <%if (msg === "success") {%>
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        New account added successfully
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                      </div>
                                <%} else if (msg==="error") {%>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        Unable to create account
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                      </div>
                                <%}%>
                                <form method="post">
                                    <div class="form-group">
                                        <div class="mb-3">
                                            <input type="text" class="form-reg form-control"
                                                placeholder="Student number" name="student_number" autofocus required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="text" class="form-reg form-control" placeholder="First name"
                                                name="firstname" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="text" class="form-reg form-control" placeholder="Last name"
                                                name="lastname" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="email" class="form-reg form-control" placeholder="Email"
                                                name="email" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="password" class="form-reg form-control" placeholder="Password"
                                                name="password" required minlength="6" maxlength="12">
                                        </div>

                                        <div class="mt-4">
                                            <button type="submit" class="btn btn-primary w-100 mb-2"
                                                formaction="/register">Register</button>
                                            <p class="text-muted">By clicking Register, you agree to the data
                                                privacy
                                                policy.</p>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <p class="text-center">Already have an account?<a
                                                class="ms-1 text-decoration-none" href="/">Login</a></p>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </section>
    </div>

    </div>

    <script src="js/bootstrap.bundle.min.js"></script>
</body>

</html>